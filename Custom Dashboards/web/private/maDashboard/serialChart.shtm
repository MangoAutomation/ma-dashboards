<!DOCTYPE html>
<html>
<head>
	<title>Serial chart demo</title>
	<link rel="stylesheet" href="/resources/angular-csp.css"></link>
</head>
<body ng-cloak>
	<ma-connection></ma-connection>
	
	<div>Filter points by name: <input ng-model="pointsFilter" ng-model-options="{debounce:1000}"></div>
	<div>Choose point 1: <ma-point-list ng-model="point1" query="{{'name=like=*'+pointsFilter+'*'}}"></ma-point-list></div>
	<div>Choose point 2: <ma-point-list ng-model="point2" query="{{'name=like=*'+pointsFilter+'*'}}"></ma-point-list></div>

	<ma-point-values point="point1" values="point1Values" from-filter="moment:'subtract':1:'hour'"
		refresh-interval="5 seconds">
	</ma-point-values>
	<ma-point-values point="point2" values="point2Values" from-filter="moment:'subtract':1:'hour'"
		refresh-interval="5 seconds">
	</ma-point-values>
	
	<ma-serial-chart style="height: 500px; width: 100%"
		series-1-title="{{point1.name}}" series-1-values="point1Values"
		series-2-title="{{point2.name}}" series-2-values="point2Values"
		options="{legend:{}}" >
	</ma-serial-chart>

	<script type="text/javascript" src="/resources/require.js"></script>
	<script type="text/javascript" src="/resources/loaderConfig.js"></script>
	<script type="text/javascript" src="/modules/dashboards/web/js/mango-3.0/maConnection.js"></script>
</body>
</html>
