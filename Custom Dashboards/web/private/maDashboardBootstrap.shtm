<!DOCTYPE html>
<html lang="en">
<head>
	<title>Bootstrap dashboard demo</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/resources/angular-csp.css"></link>
	<link rel="stylesheet" href="/resources/bootstrap/css/bootstrap.min.css"></link>
	<link rel="stylesheet" href="/resources/bootstrap/css/bootstrap-theme.min.css"></link>
</head>
<body ng-cloak>
	<ma-connection></ma-connection>
	
	<h1>Bootstrap demo page</h1>

	<ma-point-values point="myPoint" from="from" to="to" values="myPointValues"
		rollup="{{rollupType}}" rollup-interval="{{rollupPeriod}} {{rollupPeriodType}}"></ma-point-values>
	<ma-point-statistics point="myPoint" from="from" to="to" statistics="myPointStats"></ma-point-statistics>
	<ma-point-value point="myPoint" display-type="none"></ma-point-value>
	
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4 form-horizontal">
				<div class="form-group">
					<label for="point" class="col-sm-2 control-label">Choose point</label>
					<div class="col-sm-10">
						<ma-point-list id="point" ng-model="myPoint" class="form-control"></ma-point-list>
					</div>
				</div>
				<div class="form-group">
					<label for="point" class="col-sm-2 control-label">Value</label>
					<div class="col-sm-10">
						<ma-set-point-value point="myPoint" show-if-not-settable="true"></ma-set-point-value>
					</div>
				</div>
				<div class="form-group">
					<label for="point" class="col-sm-2 control-label">XID</label>
					<div class="col-sm-10">
						<p class="form-control-static">{{myPoint.xid}}</p>
					</div>
				</div>
			</div>
			<div class="col-md-4 form-horizontal">
				<div class="form-group">
					<label for="preset" class="col-sm-2 control-label">Preset</label>
					<div class="col-sm-10">
						<ma-date-range-picker id="preset" from="from" to="to" preset="LAST_1_DAYS" update-interval="{{refreshPeriod}} {{refreshPeriodType}}" class="form-control"></ma-date-range-picker>
					</div>
				</div>
				<div class="form-group">
					<label for="from" class="col-sm-2 control-label">From</label>
					<div class="col-sm-10">
						<input ma-date-picker ng-model="from" type="text" id="from" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="to" class="col-sm-2 control-label">To</label>
					<div class="col-sm-10">
						<input ma-date-picker ng-model="to" type="text" id="to" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="rollupType" class="col-sm-2 control-label">Rollup</label>
					<div class="col-sm-10">
						<select ng-init="rollupType='AVERAGE'" id="rollupType" class="form-control" ng-model="rollupType" ng-options="t.type as t.label for t in rollupTypes"></select>
					</div>
				</div>
				<div class="form-group">
					<label for="rollupPeriod" class="col-sm-2 control-label">Rollup period</label>
					<div class="col-sm-10">
						<input ng-init="rollupPeriod=1" id="rollupPeriod" type="number" ng-model="rollupPeriod" class="form-control">
						<select ng-init="rollupPeriodType='MINUTES'" ng-model="rollupPeriodType" ng-options="t.type as t.label for t in timePeriodTypes" class="form-control"></select>
					</div>
				</div>
				<div class="form-group">
					<label for="refreshPeriod" class="col-sm-2 control-label">Refresh period</label>
					<div class="col-sm-10">
						<input ng-init="refreshPeriod=1" id="refreshPeriod" type="number" ng-model="refreshPeriod" class="form-control">
						<select ng-init="refreshPeriodType='MINUTES'" ng-model="refreshPeriodType" ng-options="t.type as t.label for t in timePeriodTypes" class="form-control"></select>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<ma-statistics-table statistics="myPointStats" hide-starts-and-runtimes="true"></ma-statistics-table>
				<ma-starts-and-runtimes-table ng-if="myPointStats.startsAndRuntimes" starts-and-runtimes="myPointStats.startsAndRuntimes"></ma-starts-and-runtimes-table>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<ma-serial-chart style="height: 350px; width: 100%"
					series-1-title="{{myPoint.name}}" series-1-values="myPointValues">
				</ma-serial-chart>
			</div>
		</div>
	</div>
	
	<script type="text/javascript" src="/resources/require.js"></script>
	<script type="text/javascript" src="/resources/loaderConfig.js"></script>
	<script type="text/javascript" src="/modules/dashboards/web/js/mango-3.0/maConnection.js"></script>
</body>
</html>
