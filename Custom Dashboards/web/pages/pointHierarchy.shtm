<!DOCTYPE html>
<html>
    <head>
        <title>Current Value</title>
        
        <!-- Page Style -->
        <style type="text/css">
        </style>
        
        <!-- Scripts from Module Directory -->
        <script type="text/javascript" src="/modules/mangoApi/web/js/jquery/jquery-1.11.1.js"></script>
        <script type="text/javascript" src="/modules/mangoApi/web/js/mangoApi.js"></script>         
       
        <script type="text/javascript">
        
          //Assign point XID
          var pointXid = "Test-watts";
          
          /**
           * Run on page load
           */
          $( document ).ready(function(){
              //Setup a periodic poll method every 5000ms
              setTimeout(doPoll, 5000); 
           });
          
          /**
           *  Called on Each Poll
           */
          function doPoll(){
	          mangoRest.realtime.getCurrentValue(pointXid, function(currentValue){

	              $('#name').text(currentValue.name);
	              $('#value').text(currentValue.value);

	              
	          }, function(jqXHR, textStatus, errorThrown, mangoMessage){
	              //alert user on fail
	              alert(errorThrown + " " + mangoMessage);
	          });
          }
        </script>
        
    </head>
<body>
    <div id="main">
        <div id="name"></div>
        &nbsp - &nbsp
        <div id="value"></div>
    </div>
</body>
</html>